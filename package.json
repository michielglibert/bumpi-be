{
	"name": "bumpi-be",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"build": "npx tsc",
		"start": "node dist/index.js",
		"dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/index.js\""
	},
	"nodemonConfig": {
		"watch": [
			"src"
		],
		"ext": "ts, html",
		"exec": "./node_modules/.bin/ts-node --files -r tsconfig-paths/register ./src"
	},
	"_moduleAliases": {
		"@src": "dist"
	},
	"engines": {
		"node": ">=8.10.0"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"helmet": "^6.0.1",
		"jet-logger": "^1.3.1",
		"jsonfile": "^6.1.0",
		"morgan": "^1.10.0",
		"ts-command-line-args": "^2.4.2"
	},
	"devDependencies": {
		"@types/express": "^4.17.17",
		"@types/jsonfile": "^6.1.1",
		"@types/morgan": "^1.9.4",
		"@types/node": "^18.14.0",
		"concurrently": "^7.6.0",
		"nodemon": "^2.0.20",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.5"
	}
}
